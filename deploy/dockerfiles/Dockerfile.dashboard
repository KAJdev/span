# syntax=docker/dockerfile:1
FROM node:20-alpine
WORKDIR /app
COPY package.json package-lock.json ./
RUN npm ci --only=production
COPY server.js ./
EXPOSE 3000
HEALTHCHECK --interval=10s --timeout=5s --retries=5 CMD wget --spider -q http://localhost:3000/api/health || exit 1
CMD ["node", "server.js"]
